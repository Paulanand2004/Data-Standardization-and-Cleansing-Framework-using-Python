{
  "required": ["customer_id", "transaction_date", "amount", "currency", "country", "status"],
  "properties": {
    "customer_id": {
      "pattern": "^[A-Z0-9]{4,12}$"
    },
    "amount": {
      "minimum": 0
    },
    "currency": {
      "enum": ["INR", "USD", "EUR"]
    },
    "status": {
      "enum": ["PAID", "PENDING", "FAILED"]
    }
  }
}
